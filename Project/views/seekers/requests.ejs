<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Requests - Car Seeker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html,body {
            height: max-content;
        }

    body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to bottom, #a9ecff, #4085f4);
            background-repeat: no-repeat;
            background-size: cover;
        }
        .card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }
        /* footer {
            background: white;
            height: auto;
        } */
        footer p {
            margin: 0;
            color: #ffffff;
            font-size: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" href="/main">GearShare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <% if (user.role === 'seeker') { %>
                            <!-- Navbar for Seeker -->
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'home') { %>active<% } %>" href="/main">Home</a></li>
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'profile') { %>active<% } %>" href="/users/seekers/profile">Profile</a></li>
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'requests') { %>active<% } %>" href="/requests/seekers/requests">Requests</a></li>
                            <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
                        <% } else if (user.role === 'provider') { %>
                            <!-- Navbar for Provider -->
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'main') { %>active<% } %>" href="/main">Main</a></li>
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'profile') { %>active<% } %>" href="/users/providers/profile">Profile</a></li>
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'listings') { %>active<% } %>" href="/cars/listings">Listing</a></li>
                            <li class="nav-item"><a class="nav-link <% if (activePage === 'requests') { %>active<% } %>" href="/requests/providers/requests">Requests</a></li>
                            <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mt-5">
        <h1 class="mb-4">My Requests</h1>
        <% if (requests && requests.length > 0) { %>
            <% requests.forEach(request => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= request.carId.title %></h5>
                        <p class="card-text">Requested to: <%= request.providerId %></p>
                        <p class="card-text">startDate: <%= request.startDate %></p>
                        <p class="card-text">endDate: <%= request.endDate %></p>
                        <p class="card-text">Pickup Location: <%= request.pickupLocation %></p>
                        <p>Status: <%= request.status %></p>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No requests found.</p>
        <% } %>
    </div>
        <!-- Footer -->
        <footer class="text-center">
            <div class="container">
                <p>Â© 2024 GearShare. All rights reserved.</p>
            </div>
        </footer>
    
</body>
</html>
