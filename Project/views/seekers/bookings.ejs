<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">My Bookings</h1>

        <% if (bookings && bookings.length > 0) { %>
            <div class="list-group">
                <% bookings.forEach(booking => { %>
                    <a href="/bookings/details/<%= booking._id %>" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1"><%= booking.carId.title %></h5>
                            <small><%= new Date(booking.startDate).toDateString() %> - <%= new Date(booking.endDate).toDateString() %></small>
                        </div>
                        <p class="mb-1">
                            <strong>Provider:</strong> <%= booking.providerId.name %> <br>
                            <strong>Total Price:</strong> $<%= booking.totalPrice %>
                        </p>
                        <small class="text-muted">Status: <%= booking.status %></small>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">You have no bookings yet.</p>
        <% } %>

        <a href="/main" class="btn btn-primary mt-4">Back to Main</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
